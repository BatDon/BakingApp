    <style name="TextViewStyleBolded" parent="TextViewStyleUnbolded">
        <item name="android:textColor">#171717</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyleBoldedTitle" parent="TextViewStyleUnbolded">
        <item name="android:textColor">#171717</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewStyleUnbolded">
        <item name="android:textColor">#171717</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabletTitlesBolded" parent="TextViewStyleBolded">
        <item name="android:textSize">30sp</item>
        <item name= "android:background">@color/colorAccent</item>
    </style>

    <style name="TabletParagraphUnbolded" parent="TextViewStyleUnbolded">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>